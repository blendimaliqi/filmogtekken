# Example environment variables - RENAME THIS FILE TO .env.development or .env.production
# Replace the placeholder values with your actual values
# DO NOT COMMIT FILES WITH ACTUAL SECRETS TO YOUR REPOSITORY

# Discord Auth
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret
DISCORD_GUILD_ID=your_discord_guild_id
DISCORD_GUILD_ID2=your_discord_guild_id2

# React environment variables (prefixed with REACT_)
REACT_DISCORD_CLIENT_ID=your_discord_client_id
REACT_DISCORD_CLIENT_SECRET=your_discord_client_secret
REACT_DISCORD_GUILD_ID=your_discord_guild_id
REACT_DISCORD_GUILD_ID2=your_discord_guild_id2

# NextAuth configuration
NEXTAUTH_SECRET="generate_a_random_secret_using_node_scripts_generate-secret.js"
# For development
NEXTAUTH_URL=http://localhost:3000
# For production
# NEXTAUTH_URL=https://your-production-url.com

# Sanity CMS
SANITY_PROJECT_ID=your_sanity_project_id
SANITY_TOKEN=your_sanity_token
REACT_APP_SANITY_PROJECT_ID=your_sanity_project_id
REACT_APP_SANITY_TOKEN=your_sanity_token

# Dataset configuration
# Use 'dev' for development, 'production' for production
SANITY_DATASET=dev
NEXT_PUBLIC_SANITY_DATASET=dev

# TMDB API
TMDB_API_KEY=your_tmdb_api_key
REACT_APP_TMDB_API_KEY=your_tmdb_api_key
